extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/register")
            #error
                if error
                    p.text-danger Error!!!
            - const h1Classes = ['h3', 'mb-3', 'font-weight-normal']
              h1(class=h1Classes) Create your account
            //-input game name
            label( for="inputEmail" class="sr-only") Game name
            input(type="text" name="gamename" id="GName" class="form-control" placeholder="Game Name" required autofocus)
            //-input user name
            label( for="inputEmail" class="sr-only") User name
            //-input(type="email" name="username" id="UName" class="form-control" placeholder="User Name" required autofocus)
            input(type="text" name="username" id="UName" class="form-control" placeholder="User Name" required)
            //-input password
            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" id="UPass" class="form-control" placeholder="Password" required)
            //-signIn button
            - const buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Save
